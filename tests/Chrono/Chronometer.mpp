export module CppUtils.UnitTests.Chrono.Chronometer;

import std;
import CppUtils;

namespace CppUtils::UnitTest::Chrono::Chronometer
{
	auto _ = TestSuite{"Chrono", {"Logger"}, [](TestSuite& suite) {
		using Logger = TestSuite::Logger;

		suite.addTest("Chronometer", [&] {
			auto chrono = CppUtils::Chrono::Chronometer{};
			chrono.stop();
			auto string = CppUtils::Chrono::durationToString(chrono.getDuration());
			suite.expect(not std::empty(string));
			Logger::print("{}", string);
		});
	}};
}
