export module CppUtils.UnitTests.Window;

import std;
import CppUtils;

export namespace CppUtils::UnitTest::Window
{
	inline auto _ = TestSuite{"Window", [](auto& suite) {
		using namespace std::literals;

		suite.addTest("Opening a window", [&] {
			auto window = CppUtils::Window::Window{"Title", {1'920, 1'080}};
			// window.runLoop();
			std::this_thread::sleep_for(5s);
			suite.expectEqual(window.getTitle(), "Title"sv);
		});
	}};
}
