export module CppUtils.UnitTests.Thread.SharedLocker;

import std;
import CppUtils;

namespace CppUtils::UnitTest::Thread::SharedLocker
{
	auto _ = TestSuite{"Thread/SharedLocker", {"UnitTest", "Thread/UniqueLocker"}, [](TestSuite& suite) {
		suite.addTest("Unique access", [&] {
			auto lockedString = CppUtils::Thread::SharedLocker<std::string>{"Foo"};
			{
				auto accessor = lockedString.uniqueAccess();
				suite.expectEqual(accessor.value(), "Foo");
			}
		});

		suite.addTest("Unique access: Test mutex", [&] {
			auto lockedNumber = CppUtils::Thread::SharedLocker{0uz};

			auto incrementFunction = [&lockedNumber](std::size_t iterations) noexcept -> void {
				while (iterations--)
				{
					auto accessor = lockedNumber.uniqueAccess();
					auto& nb = accessor.value();
					++nb;
				}
			};

			auto iterations = 1'000'000uz;
			{
				auto thread0 = std::jthread{incrementFunction, iterations};
				auto thread1 = std::jthread{incrementFunction, iterations};
			}
			auto accessor = lockedNumber.uniqueAccess();
			suite.expectEqual(accessor.value(), iterations * 2);
		});

		suite.addTest("Shared access", [&] {
			auto lockedString = CppUtils::Thread::SharedLocker<std::string>{"Foo"};
			{
				auto accessor0 = lockedString.sharedAccess();
				auto accessor1 = lockedString.sharedAccess();
				suite.expectEqual(accessor0.value(), "Foo");
				suite.expectEqual(accessor1.value(), "Foo");
			}
		});

		suite.addTest("MultipleAccessor", [&] {
			auto lockedString1 = CppUtils::Thread::SharedLocker<std::string>{"Foo"};
			auto lockedString2 = CppUtils::Thread::SharedLocker<std::string>{"Bar"};
			{
				auto accessor = CppUtils::Thread::MultipleAccessor{lockedString1, lockedString2};
				suite.expectEqual(std::get<0>(accessor.values), "Foo");
				suite.expectEqual(std::get<1>(accessor.values), "Bar");
			}
		});

		suite.addTest("Mixed access", [&] {
			auto lockedString1 = CppUtils::Thread::UniqueLocker<std::string>{"Foo"};
			auto lockedString2 = CppUtils::Thread::SharedLocker<std::string>{"Bar"};
			{
				auto accessor = CppUtils::Thread::MultipleAccessor{lockedString1, lockedString2};
				suite.expectEqual(std::get<0>(accessor.values), "Foo");
				suite.expectEqual(std::get<1>(accessor.values), "Bar");
			}
		});
	}};
}
